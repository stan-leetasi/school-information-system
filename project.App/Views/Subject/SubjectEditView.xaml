<?xml version="1.0" encoding="utf-8" ?>
<views:ContentPageBase xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
                       xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
                       xmlns:views="clr-namespace:project.App.Views"
                       xmlns:viewModels="clr-namespace:project.App.ViewModels.Subject"
                       x:Class="project.App.Views.Subject.SubjectEditView"
                       x:DataType="viewModels:SubjectEditViewModel">

    <VerticalStackLayout Padding="10">
        <Label Text="Edit Subject" FontSize="Large" HorizontalOptions="Center" />

        <Label Text="Name" />
        <Entry Text="{Binding Subject.Name}" />

        <Label Text="Acronym" />
        <Entry Text="{Binding Subject.Acronym}" />

        <Button Text="Save" Command="{Binding SaveCommand}" />
    </VerticalStackLayout>
</views:ContentPageBase>
